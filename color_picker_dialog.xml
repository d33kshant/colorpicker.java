<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/previewColor"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:srcCompat="@color/white" />

    <TextView
        android:id="@+id/textRed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="Red"
        android:textColor=#ffffff" />

    <SeekBar
        android:id="@+id/seekBarRed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:max="255"
        android:progressBackgroundTint="#FFFFFF"
        android:progressTint="#42A5F5"
        android:thumbTint="#2C9EFA" />

    <TextView
        android:id="@+id/textGreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Green"
        android:textColor="#ffffff" />

    <SeekBar
        android:id="@+id/seekBarGreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:max="255"
        android:progressBackgroundTint="#FFFFFF"
        android:progressTint="#42A5F5"
        android:thumbTint="#2C9EFA" />

    <TextView
        android:id="@+id/textBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Blue"
        android:textColor="#ffffff" />

    <SeekBar
        android:id="@+id/seekBarBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:max="255"
        android:progressBackgroundTint="#FFFFFF"
        android:progressTint="#42A5F5"
        android:thumbTint="#2C9EFA" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancelPicker"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:backgroundTint="#303030"
            android:text="Cancel"
            android:textColor="#FF7070" />

        <Button
            android:id="@+id/setPicker"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:backgroundTint="#303030"
            android:text="set"
            android:textColor="#2C9EFA" />
    </LinearLayout>
</LinearLayout>
